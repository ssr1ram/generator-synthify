extends ../layouts/default

block head
  title Login

block neck
  link(rel='stylesheet', href='/views/signup/index.min.css?#{cacheBreaker}')

block feet
  script(src='/views/login/index.min.js?#{cacheBreaker}')

block body
  div.row
    div.col-sm-6
      div.page-header
        h1 Sign In
      if oauthTwitter || oauthGitHub || oauthFacebook || oauthLinkedIn
        if oauthMessage
          div.alerts
            div.alert.alert-info.alert-dismissable
              button.close(type='button', data-dismiss='alert') &times;
              |#{oauthMessage}&nbsp;
              b
                a(href='/signup/') Sign Up Here
        div.btn-group.btn-group-justified(style='margin:40px 20px')
          if oauthTwitter
            a.btn.btn-info(href='/login/twitter/')
              i.fa.fa-twitter.fa-lg
              |  Twitter
          if oauthGitHub
            a.btn.btn-info(href='/login/github/')
              i.fa.fa-github.fa-lg
              |  GitHub
          if oauthFacebook
            a.btn.btn-info(href='/login/facebook/')
              i.fa.fa-facebook-square.fa-lg
              |  Facebook
          if oauthLinkedIn
            a.btn.btn-primary.btn-lg(href='/login/linkedin/')
              i.fa.fa-linkedin-square.fa-lg
              |  Login with LinkedIn
        hr
      p Or Login with a password ...
      div#login(style='background-color:#f0f0f0;padding:20px;border-radius:10px')
    div.col-sm-6.marketing
      div.page-header
        h1 Welcome Back
      p.lead We've missed you :-)
      i.fa.fa-backward.super-awesome

  script(type='text/template', id='tmpl-login')
    form
      div.alerts
        |<% _.each(errors, function(err) { %>
        div.alert.alert-danger.alert-dismissable
          button.close(type='button', data-dismiss='alert') &times;
          |<%- err %>
        |<% }); %>
      div.form-group(class!='<%- errfor.username ? "has-error" : "" %>')
        label.control-label Username or Email:
        input.form-control(type='text', name='username', value!='<%= username %>')
        span.help-block <%- errfor.username %>
      div.form-group(class!='<%- errfor.password ? "has-error" : "" %>')
        label.control-label Password:
        input.form-control(type='password', name='password', value!='<%= password %>')
        span.help-block <%- errfor.password %>
      div.form-actions
        button.btn.btn-primary.btn-login(type='button') Sign In
        |&nbsp;
        a.btn.btn-link(href='/login/forgot/') Forget your password?
